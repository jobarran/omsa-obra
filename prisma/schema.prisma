generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  user
}

enum MaterialType {
  varios
  modulo
}

model User {
  id       String   @id @default(uuid())
  name     String
  lastName String
  email    String   @unique
  password String
  role     UserRole @default(user)
  image    String?
}

model Project {
  id        String  @id @default(uuid())
  name      String
  shortName String?
}

model Material {
  id   String       @id @default(uuid())
  type MaterialType @default(varios)
  name String
  code String
  quantity String
}
